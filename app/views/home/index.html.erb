
<div class="row">

    <div class="col-md-12 text-center">
        <h1 class="page-header">請選擇關卡<br>
          <span class="label label-info degree-lb">簡單</span>
          <span class="label label-warning degree-lb">中等</span>
          <span class="label label-danger degree-lb">困難</span>
        </h1>
    </div>

    <% i = 0 %>
    <% @levels.each do |level| %>
    <div class="col-md-3 col-sm-4 col-xs-6 text-center">
        <a class="btn btn-info level-btn" href="/home/new">
            <div class="caption">
              <h3><%= i += 1 %></h3>
              <h4><%= level.name %></h4>
            </div>
        </a>
    </div>
    <% end %>

</div>
