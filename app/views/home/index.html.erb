
<div class="row">

    <div class="col-md-12 text-center">
        <h1 class="page-header">請選擇關卡<br>
          <span class="label label-info degree-lb">明顯</span>
          <span class="label label-warning degree-lb">中等</span>
          <span class="label label-danger degree-lb">隱性</span>
        </h1>
    </div>

    <% i = 1 %>
    <% @low_levels.each do |level| %>
    <div class="col-sm-4 col-xs-6 text-center">
        <a class="btn btn-info level-btn" href="/home/new/<%= level.id %>?no=<%= i %>">
            <div class="caption">
              <h3><%= i %></h3>
              <h4><%= level.name %></h4>
            </div>
        </a>
    </div>
    <% i += 1 %>
    <% end %>

    <% @mid_levels.each do |level| %>
    <div class="col-sm-4 col-xs-6 text-center">
        <a class="btn btn-warning level-btn" href="/home/new/<%= level.id %>?no=<%= i %>">
            <div class="caption">
              <h3><%= i %></h3>
              <h4><%= level.name %></h4>
            </div>
        </a>
    </div>
    <% i += 1 %>
    <% end %>

    <% @high_levels.each do |level| %>
    <div class="col-sm-4 col-xs-6 text-center">
        <a class="btn btn-danger level-btn" href="/home/new/<%= level.id %>?no=<%= i %>">
            <div class="caption">
              <h3><%= i %></h3>
              <h4><%= level.name %></h4>
            </div>
        </a>
    </div>
    <% i += 1 %>
    <% end %>

</div>
