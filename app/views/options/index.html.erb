
<div class="row text-center">
    <h1 class="page-header"><%= @level.name %> - 選項管理</h1>
</div>

<div class="row" style="padding-bottom: 2px">
    <a href="/options/new/<%= @level.id %>" class="btn btn-success btn-new">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        新增選項
    </a>
</div>

<!-- /.row -->
<div class="row">
    <table class="table">
        <thead>
            <th class="bg-primary">
                #
            </th>
            <th class="bg-primary">
                名稱
            </th>
            <th class="bg-primary">
                圖片
            </th>
            <th class="bg-primary">
                是否答案
            </th>
            <th class="bg-primary">
                功能
            </th>
        </thead>
        <tbody>
            <% i = 0 %>
            <% @options.each do |option| %>
            <tr>
                <td>
                    <%= i += 1 %>
                </td>
                <td>
                    <%= option.name %>
                </td>
                <td>
                    <img src="<%= option.image_path %>" height="100px" alt="">
                </td>
                <td>
                    <%= option.is_answer %>
                </td>
                <td>
                    <a class="btn btn-warning disabled">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-danger disabled" rel="nofollow" data-method="delete"
                        href="/options/<%= option.id %>">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
