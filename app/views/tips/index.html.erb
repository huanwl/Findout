
<div class="row text-center">
    <h1 class="page-header"><%= @level.name %> - 提示管理</h1>
</div>

<div class="row" style="padding-bottom: 2px">
    <a href="/tips/new/<%= @level.id %>" class="btn btn-success btn-new">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        新增提示
    </a>
</div>

<!-- /.row -->
<div class="row">
    <table class="table">
        <thead>
            <th class="bg-primary">
                #
            </th>
            <th class="bg-primary">
                名稱
            </th>
            <th class="bg-primary">
                功能
            </th>
        </thead>
        <tbody>
            <% i = 0 %>
            <% @tips.each do |tip| %>
            <tr>
                <td>
                    <%= i += 1 %>
                </td>
                <td>
                    <%= tip.name %>
                </td>
                <td>
                    <a class="btn btn-warning">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-danger" rel="nofollow" data-method="delete"
                        href="/tips/<%= tip.id %>">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
